<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:conv="clr-namespace:PL.Converters"
        mc:Ignorable="d"
        Title="VolunteerWindow" Height="450" Width="800">

    <Window.Resources>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <conv:ConvertIdToVisibility x:Key="ConvertIdToVisibility" />
        <conv:ConvertIdToReadOnly x:Key="ConvertIdToReadOnly" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ID -->
        <Label Content="ID:" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}"/>

        <TextBox Grid.Row="0" Grid.Column="1"
         Text="{Binding CurrentVolunteer.Id, Mode=TwoWay}" 
         Style="{StaticResource TextBoxStyle}"
         IsReadOnly="{Binding IsEditMode}" />

        <!-- Name -->
        <Label Content="Name:"  Grid.Row="1" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Column="1"  Grid.Row="1" Text="{Binding CurrentVolunteer.Name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Style="{StaticResource TextBoxStyle}"/>

        <!-- Phone -->
        <Label Content="Phone:" Grid.Row="2" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CurrentVolunteer.Phone, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Style="{StaticResource TextBoxStyle}"/>

        <!-- Email -->
        <Label Content="Email:" Grid.Row="3" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CurrentVolunteer.Email, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Style="{StaticResource TextBoxStyle}"/>

        <!-- Active -->
        <Label Content="Active:" Grid.Row="4" Style="{StaticResource LabelStyle}"/>
        <CheckBox Grid.Row="4" Grid.Column="1" IsChecked="{Binding CurrentVolunteer.Active, Mode=TwoWay}" Style="{StaticResource CheckBoxStyle}"/>

        <!-- Role -->
        <Label Content="Role:" Grid.Row="5" Style="{StaticResource LabelStyle}"/>
        <ComboBox Grid.Row="5" Grid.Column="1" Style="{StaticResource ComboBoxStyle}"
                  ItemsSource="{Binding RoleCollection}" SelectedItem="{Binding CurrentVolunteer.MyRole, Mode=TwoWay}"/>

        <!-- Address -->
        <Label Content="Address:" Grid.Row="6" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CurrentVolunteer.Address, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Style="{StaticResource TextBoxStyle}"/>

        <!-- Latitude -->
        <!--<Label Content="Latitude:" Grid.Row="7" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding CurrentVolunteer.Latitude, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Style="{StaticResource TextBoxStyle}"/>

        -->
        <!-- Longitude -->
        <!--
        <Label Content="Longitude:" Grid.Row="8" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding CurrentVolunteer.Longitude, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Style="{StaticResource TextBoxStyle}"/>-->

        <!-- LargestDistance -->
        <Label Content="LargestDistance:" Grid.Row="7" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding CurrentVolunteer.LargestDistance, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Style="{StaticResource TextBoxStyle}"/>

        <!-- Distance Type -->
        <Label Content="Distance Type:" Grid.Row="8" Style="{StaticResource LabelStyle}"/>
        <ComboBox Grid.Row="8" Grid.Column="1" Style="{StaticResource ComboBoxStyle}"
                  ItemsSource="{Binding DistanceTypeCollection}" SelectedItem="{Binding CurrentVolunteer.MyDistanceType, Mode=TwoWay}"/>

        <!-- Password -->
        <Label Content="Password:" Grid.Row="9" Grid.Column="0" Style="{StaticResource LabelStyle}" Visibility="{Binding ButtonText}"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="9" Grid.Column="1" PasswordChanged="PasswordBox_PasswordChanged" />
        <!--<Label Content="Password:" Grid.Row="11" Style="{StaticResource LabelStyle}"/>
        <PasswordBox x:Name="passwordBox" Grid.Row="11" Grid.Column="1" 
             PasswordChanged="PasswordBox_PasswordChanged"
            Visibility="{Binding ButtonText, Converter={StaticResource IdToVisibilityConverter}}"/>-->
        <!-- Button -->
        <Button Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Content="{Binding ButtonText}"
                Click="btnAddUpdate_Click" HorizontalAlignment="Center" Width="120" Height="30" Margin="10"/>
    </Grid>
</Window>
