<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:PL.Converters"
        Title="Emergency Road Service - Login" 
        Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="LoginGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#ff6b6b" Offset="0"/>
            <GradientStop Color="#ee5a24" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>

        <!-- Styles -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5,0,20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#667eea"/>
                                <Setter Property="BorderThickness" Value="0,0,0,3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5,0,20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#667eea"/>
                                <Setter Property="BorderThickness" Value="0,0,0,3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LoginButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,20,0,20"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#5a67d8" Offset="0"/>
                                            <GradientStop Color="#667eea" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#4c51bf" Offset="0"/>
                                            <GradientStop Color="#5a67d8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#667eea" BlurRadius="15" ShadowDepth="5" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ErrorText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ff4757"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SuccessText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2ed573"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="PlaceholderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
        </Style>
    </Window.Resources>

    <!-- Main Container with Glass Effect -->
    <Border Background="{StaticResource LoginGradient}" 
            CornerRadius="25" 
            BorderThickness="2" 
            BorderBrush="White"
            Opacity="0.95">

        <Border.Effect>
            <DropShadowEffect Color="#000" BlurRadius="30" ShadowDepth="15" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo and Title -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
                <!-- Logo Circle -->
                <Border Width="80" Height="80" 
                        Background="White" 
                        CornerRadius="40" 
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>
                    <Ellipse Fill="{StaticResource HeaderGradient}" 
                             Width="60" Height="60"/>
                </Border>

                <!-- Title -->
                <TextBlock Text="EMERGENCY ROAD SERVICE" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,5">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#000" BlurRadius="5" ShadowDepth="2" Opacity="0.7"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="Control Center Access" 
                           Foreground="White" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           Opacity="0.8"/>
            </StackPanel>

            <!-- User ID Section -->
            <TextBlock Grid.Row="1" 
                       Text="USER ID" 
                       Foreground="White" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5" 
                       Opacity="0.9"/>

            <Grid Grid.Row="2">
                <TextBox Text="{Binding UserId, Mode=TwoWay}" 
                         Style="{StaticResource ModernTextBox}"/>
                <TextBlock Text="Enter your User ID" 
                           Style="{StaticResource PlaceholderText}"
                           Visibility="{Binding UserId, Converter={StaticResource StringToVisibilityConverter}, 
                                       ConverterParameter=Inverse}"/>
            </Grid>

            <!-- Password Section -->
            <TextBlock Grid.Row="3" 
                       Text="PASSWORD" 
                       Foreground="White" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5" 
                       Opacity="0.9"/>

            <Grid Grid.Row="4">
                <PasswordBox x:Name="PasswordBox"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Style="{StaticResource ModernPasswordBox}"/>
                <TextBlock Text="Enter your password" 
                           Style="{StaticResource PlaceholderText}"
                           Visibility="{Binding Password, Converter={StaticResource StringToVisibilityConverter}, 
                                       ConverterParameter=Inverse}"/>
            </Grid>

            <!-- Login Button -->
            <Button Grid.Row="5" 
                    Content="LOGIN TO SYSTEM" 
                    Command="{Binding LoginCommand}"
                    Style="{StaticResource LoginButton}"/>

            <!-- Messages Section -->
            <StackPanel Grid.Row="6" Margin="0,10">
                <!-- Error Message -->
                <Border Background="#ff4757" 
                        CornerRadius="10" 
                        Padding="15,10" 
                        Margin="0,5"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <Border.Effect>
                        <DropShadowEffect Color="#ff4757" BlurRadius="10" ShadowDepth="3" Opacity="0.4"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="ERROR" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="White" 
                                   FontWeight="SemiBold" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Success Message -->
                <Border Background="#2ed573" 
                        CornerRadius="10" 
                        Padding="15,10" 
                        Margin="0,5"
                        Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <Border.Effect>
                        <DropShadowEffect Color="#2ed573" BlurRadius="10" ShadowDepth="3" Opacity="0.4"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="SUCCESS" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   Foreground="White" 
                                   FontWeight="SemiBold" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Spacer -->
            <Grid Grid.Row="7"/>

            <!-- Instructions -->
            <Border Grid.Row="8" 
                    Background="White" 
                    CornerRadius="15" 
                    Padding="20,15" 
                    Opacity="0.9" 
                    Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="SYSTEM ACCESS INSTRUCTIONS" 
                               Foreground="#2c3e50" 
                               FontSize="12" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Enter your assigned User ID and password" 
                               Foreground="#34495e" 
                               FontSize="11" 
                               Margin="0,2"/>

                    <TextBlock Text="Volunteers access personal dashboard" 
                               Foreground="#34495e" 
                               FontSize="11" 
                               Margin="0,2"/>

                    <TextBlock Text="Managers can choose control center or personal view" 
                               Foreground="#34495e" 
                               FontSize="11" 
                               Margin="0,2"/>

                    <TextBlock Text="Login window remains open for multiple users" 
                               Foreground="#34495e" 
                               FontSize="11" 
                               Margin="0,2"/>
                </StackPanel>
            </Border>

            <!-- Close Button -->
            <Button Grid.Row="8" 
                    Content="X" 
                    Width="30" Height="30" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Background="Transparent" 
                    Foreground="White" 
                    BorderThickness="0" 
                    FontSize="20" 
                    FontWeight="Bold" 
                    Cursor="Hand" 
                    Margin="0,-10,-10,0"
                    Click="CloseButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ff4757"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>