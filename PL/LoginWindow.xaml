<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="UserId:" Margin="0,0,0,5"/>
            <TextBox Width="200" Height="30" Margin="10"
                     Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" />


            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="30" Margin="10" PasswordChanged="PasswordBox_PasswordChanged" />
            <Button Content="Login" Command="{Binding LoginCommand}" Width="100" HorizontalAlignment="Center"/>
            <TextBlock Foreground="Red" Margin="10"
                       Text="{Binding ErrorMessage}" />
        </StackPanel>
    </Grid>
</Window>

