
<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:converters="clr-namespace:PL.Converters"
        mc:Ignorable="d"
        Title="Emergency Road Service - Control Center" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Converters -->
        <converters:BooleanInverterConverter x:Key="BooleanInverterConverter"/>
        <converters:SimulatorButtonTextConverter x:Key="SimulatorButtonTextConverter"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="MainGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1a1a2e" Offset="0"/>
            <GradientStop Color="#16213e" Offset="0.5"/>
            <GradientStop Color="#0f3460" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#ff6b6b" Offset="0"/>
            <GradientStop Color="#ee5a24" Offset="0.5"/>
            <GradientStop Color="#e55039" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2c3e50" Offset="0"/>
            <GradientStop Color="#34495e" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BlueCardGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4834d4" Offset="0"/>
            <GradientStop Color="#686de0" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PurpleCardGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8854d0" Offset="0"/>
            <GradientStop Color="#a55eea" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="GreenCardGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#26de81" Offset="0"/>
            <GradientStop Color="#20bf6b" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="RedCardGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#fc5c65" Offset="0"/>
            <GradientStop Color="#eb3b5a" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="OrangeCardGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#fd9644" Offset="0"/>
            <GradientStop Color="#f39c12" Offset="1"/>
        </LinearGradientBrush>

        <!-- Status Color Gradients -->
        <LinearGradientBrush x:Key="OpenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3498db" Offset="0"/>
            <GradientStop Color="#2980b9" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="InProgressGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#9b59b6" Offset="0"/>
            <GradientStop Color="#8e44ad" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ClosedGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#27ae60" Offset="0"/>
            <GradientStop Color="#229954" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ExpiredGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#e74c3c" Offset="0"/>
            <GradientStop Color="#c0392b" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="OpenRiskGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f39c12" Offset="0"/>
            <GradientStop Color="#e67e22" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="InProgressRiskGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#e67e22" Offset="0"/>
            <GradientStop Color="#d35400" Offset="1"/>
        </LinearGradientBrush>

        <!-- Styles -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000" BlurRadius="20" ShadowDepth="8" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000" BlurRadius="25" ShadowDepth="10" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#1a1a2e"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#f0f0f0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000" BlurRadius="30" ShadowDepth="12" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                             To="1.05" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                             To="1.05" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                             To="1" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                             To="1" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusBox" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000" BlurRadius="8" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000" BlurRadius="5" ShadowDepth="2" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SubTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#ecf0f1"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <Style x:Key="TimeDisplay" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#4834d4" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Border with rounded corners -->
    <Border Background="{StaticResource MainGradient}" 
            CornerRadius="20" 
            BorderThickness="1" 
            BorderBrush="#4834d4">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource HeaderGradient}" 
                    CornerRadius="20,20,0,0" 
                    Height="80" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <Ellipse Width="40" Height="40" 
                                 Fill="White" 
                                 Margin="0,0,15,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="EMERGENCY ROAD SERVICE" 
                                       Style="{StaticResource ModernTitle}"/>
                            <TextBlock Text="Advanced Control Center" 
                                       Style="{StaticResource SubTitle}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top" 
                                Margin="0,10,20,0">
                        <Button Content="-" 
                                Width="30" Height="30" 
                                Click="Minimize_Click"
                                Style="{StaticResource ModernButton}"
                                Margin="5,0"/>
                        <Button Content="X" 
                                Width="30" Height="30" 
                                Click="Close_Click"
                                Style="{StaticResource ModernButton}"
                                Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- System Status Bar -->
            <Border Grid.Row="1" 
                    Background="Transparent" 
                    Padding="20,15">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Border Background="{StaticResource BlueCardGradient}" 
                            CornerRadius="15" 
                            Padding="20,10" 
                            Margin="10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="SYSTEM TIME" 
                                       Foreground="White" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,15,0"/>
                            <TextBlock Text="{Binding CurrentTime, StringFormat='{}{0:dd/MM/yyyy HH:mm:ss}'}" 
                                       Style="{StaticResource TimeDisplay}"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource GreenCardGradient}" 
                            CornerRadius="15" 
                            Padding="20,10" 
                            Margin="10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="STATUS" 
                                       Foreground="White" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,15,0"/>
                            <TextBlock Text="ONLINE" 
                                       Foreground="White" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="2" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top Row with main content -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column - Time Controls -->
                    <Border Grid.Column="0" Style="{StaticResource GlassCard}">
                        <StackPanel>
                            <TextBlock Text="TIME CONTROL" 
                                       Foreground="White" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,20"/>

                            <Button Content="+ 1 MINUTE" 
                                    Click="btnAddOneMinute_Click" 
                                    Style="{StaticResource ModernButton}" 
                                    Margin="0,3"
                                    IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverterConverter}}"/>
                            <Button Content="+ 1 HOUR" 
                                    Click="btnAddOneHour_Click" 
                                    Style="{StaticResource ModernButton}" 
                                    Margin="0,3"
                                    IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverterConverter}}"/>
                            <Button Content="+ 1 DAY" 
                                    Click="btnAddOneDay_Click" 
                                    Style="{StaticResource ModernButton}" 
                                    Margin="0,3"
                                    IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverterConverter}}"/>
                            <Button Content="+ 1 MONTH" 
                                    Click="btnAddOneMonth_Click" 
                                    Style="{StaticResource ModernButton}" 
                                    Margin="0,3"
                                    IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverterConverter}}"/>
                            <Button Content="+ 1 YEAR" 
                                    Click="btnAddOneYear_Click" 
                                    Style="{StaticResource ModernButton}" 
                                    Margin="0,3"
                                    IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverterConverter}}"/>

                            <Separator Background="White" 
                                       Opacity="0.3" 
                                       Margin="0,15,0,15"/>

                            <TextBlock Text="RISK CONFIG" 
                                       Foreground="White" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,10"/>

                            <TextBox Text="{Binding RiskRange}" 
                                     Background="Transparent" 
                                     Foreground="White" 
                                     BorderBrush="White" 
                                     BorderThickness="2" 
                                     Padding="8" 
                                     FontSize="14" 
                                     HorizontalAlignment="Stretch" 
                                     Margin="0,0,0,10"/>

                            <Button Content="UPDATE" 
                                    Click="UpdateButton_Click" 
                                    Style="{StaticResource ModernButton}"/>
                        </StackPanel>
                    </Border>

                    <!-- Center Column - Main Actions -->
                    <StackPanel Grid.Column="1" Margin="20,0">
                        <!-- Service Calls Card -->
                        <Border Background="{StaticResource BlueCardGradient}" 
                                Style="{StaticResource ActionCard}"
                                MouseLeftButtonDown="HandleCalls_Click"
                                Height="239" Width="559">
                            <StackPanel HorizontalAlignment="Center" Margin="0,-12,0,12">
                                <Ellipse Width="36" Height="22" 
                                         Fill="White" RenderTransformOrigin="0.612,0.169" 
                                         />
                                <TextBlock Text="SERVICE CALLS" 
                                           Foreground="White" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Height="34" Width="144"/>

                                <!-- Call Status Display -->
                                <Grid Margin="0,5,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="33*"/>
                                        <ColumnDefinition Width="71*"/>
                                        <ColumnDefinition Width="103*"/>
                                        <ColumnDefinition Width="96*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="32.812"/>
                                        <RowDefinition Height="23.108"/>
                                        <RowDefinition Height="53.028"/>
                                        <RowDefinition Height="2.892"/>
                                    </Grid.RowDefinitions>

                                    <!-- Open Status -->
                                    <Border Grid.Row="0" Grid.Column="0" 
                                            Style="{StaticResource StatusBox}"
                                            Background="{StaticResource OpenGradient}"
                                            Margin="2,2,2,2" Grid.RowSpan="2" Grid.ColumnSpan="2">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding OpenCallsCount}" 
                                                       Foreground="White" 
                                                       FontSize="16" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="OPEN" 
                                                       Foreground="White" 
                                                       FontSize="8" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- InProgress Status -->
                                    <Border Grid.Row="0" Grid.Column="2" 
                                            Style="{StaticResource StatusBox}"
                                            Background="{StaticResource InProgressGradient}"
                                            Margin="2,2,2,2" Grid.RowSpan="2">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding InProgressCallsCount}" 
                                                       Foreground="White" 
                                                       FontSize="16" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="PROGRESS" 
                                                       Foreground="White" 
                                                       FontSize="8" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Closed Status -->
                                    <Border Grid.Row="0" Grid.Column="3" 
                                            Style="{StaticResource StatusBox}"
                                            Background="{StaticResource ClosedGradient}"
                                            Margin="2,0,2,2" Grid.RowSpan="2">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding ClosedCallsCount}" 
                                                       Foreground="White" 
                                                       FontSize="16" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="CLOSED" 
                                                       Foreground="White" 
                                                       FontSize="8" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Expired Status -->
                                    <Border Grid.Row="2" Grid.Column="0" 
                                            Style="{StaticResource StatusBox}"
                                            Background="{StaticResource ExpiredGradient}"
                                            Margin="2,2,2,2" Grid.RowSpan="2" Grid.ColumnSpan="2">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding ExpiredCallsCount}" 
                                                       Foreground="White" 
                                                       FontSize="16" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="EXPIRED" 
                                                       Foreground="White" 
                                                       FontSize="8" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- OpenRisk Status -->
                                    <Border Grid.Row="2" Grid.Column="2" 
                                            Style="{StaticResource StatusBox}"
                                            Background="{StaticResource OpenRiskGradient}"
                                            Margin="2,2,2,2" Grid.RowSpan="2">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding OpenRiskCallsCount}" 
                                                       Foreground="White" 
                                                       FontSize="16" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="OPEN RISK" 
                                                       Foreground="White" 
                                                       FontSize="8" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- InProgressRisk Status -->
                                    <Border Grid.Row="2" Grid.Column="3" 
                                            Style="{StaticResource StatusBox}"
                                            Background="{StaticResource InProgressRiskGradient}"
                                            Margin="2,2,2,2" Grid.RowSpan="2">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding InProgressRiskCallsCount}" 
                                                       Foreground="White" 
                                                       FontSize="16" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="PROG RISK" 
                                                       Foreground="White" 
                                                       FontSize="8" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <TextBlock Text="Manage emergency service calls and dispatch technicians" 
                                           Foreground="White" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center" 
                                           TextWrapping="Wrap" 
                                           TextAlignment="Center" 
                                           Opacity="0.9"/>
                            </StackPanel>
                        </Border>

                        <!-- Technicians Card -->
                        <Border Background="{StaticResource PurpleCardGradient}" 
                                Style="{StaticResource ActionCard}"
                                MouseLeftButtonDown="HandleVolunteers_Click"
                                Height="200">
                            <StackPanel HorizontalAlignment="Center">
                                <Ellipse Width="60" Height="60" 
                                         Fill="White" 
                                         Margin="0,0,0,15"/>
                                <TextBlock Text="TECHNICIANS" 
                                           Foreground="White" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Manage technician assignments, availability status, and workforce optimization" 
                                           Foreground="White" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center" 
                                           TextWrapping="Wrap" 
                                           TextAlignment="Center" 
                                           Opacity="0.9"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Right Column - Database Controls -->
                    <Border Grid.Column="2" Style="{StaticResource GlassCard}">
                        <StackPanel>
                            <TextBlock Text="DATABASE" 
                                       Foreground="White" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,25"/>

                            <Border Background="{StaticResource GreenCardGradient}" 
                                    CornerRadius="15" 
                                    Padding="20" 
                                    Margin="0,10" 
                                    Cursor="Hand"
                                    MouseLeftButtonDown="InitDB_Click"
                                    IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverterConverter}}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Opacity" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSimulatorRunning}" Value="True">
                                                <Setter Property="Opacity" Value="0.5"/>
                                                <Setter Property="Cursor" Value="No"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel>
                                    <TextBlock Text="INITIALIZE" 
                                               Foreground="White" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="Setup default data" 
                                               Foreground="White" 
                                               FontSize="12" 
                                               HorizontalAlignment="Center" 
                                               Opacity="0.8"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{StaticResource RedCardGradient}" 
                                    CornerRadius="15" 
                                    Padding="20" 
                                    Margin="0,10" 
                                    Cursor="Hand"
                                    MouseLeftButtonDown="ResetDB_Click"
                                    IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverterConverter}}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Opacity" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSimulatorRunning}" Value="True">
                                                <Setter Property="Opacity" Value="0.5"/>
                                                <Setter Property="Cursor" Value="No"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel>
                                    <TextBlock Text="RESET" 
                                               Foreground="White" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="Clear all data" 
                                               Foreground="White" 
                                               FontSize="12" 
                                               HorizontalAlignment="Center" 
                                               Opacity="0.8"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Bottom Row - Simulator Controls -->
                <Grid Grid.Row="1" Margin="0,20,0,0">
                    <Border Background="{StaticResource OrangeCardGradient}" 
                            CornerRadius="20" 
                            Padding="30,20" 
                            Effect="{Binding Source={StaticResource GlassCard}, Path=Effect}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="SIMULATOR" 
                                       Foreground="White" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,30,0"/>

                            <StackPanel Grid.Column="1" 
                                        Orientation="Horizontal" 
                                        VerticalAlignment="Center">
                                <TextBlock Text="INTERVAL (MINUTES):" 
                                           Foreground="White" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,15,0"/>

                                <TextBox Text="{Binding Interval}" 
                                         Background="White" 
                                         Foreground="#1a1a2e" 
                                         BorderBrush="Transparent" 
                                         BorderThickness="0" 
                                         Padding="10,8" 
                                         FontSize="16" 
                                         FontWeight="Bold"
                                         Width="80"
                                         VerticalAlignment="Center"
                                         IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverterConverter}}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="8"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}">
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                          VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>

                            <Button Grid.Column="3"
                                    Content="{Binding IsSimulatorRunning, Converter={StaticResource SimulatorButtonTextConverter}}" 
                                    Click="ToggleSimulator_Click" 
                                    Background="White"
                                    Foreground="#fd9644"
                                    FontWeight="Bold"
                                    FontSize="16"
                                    Padding="30,12"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    VerticalAlignment="Center">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="25"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            BorderBrush="{TemplateBinding BorderBrush}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#f0f0f0"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#e0e0e0"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="3" 
                    Background="Transparent" 
                    Padding="30,15" 
                    CornerRadius="0,0,20,20">
                <TextBlock Text="Emergency Road Service Control Center - Advanced Management System" 
                           Foreground="White" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           Opacity="0.7"/>
            </Border>
        </Grid>
    </Border>
</Window>