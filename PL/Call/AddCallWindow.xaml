<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="PL.AddCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:conv="clr-namespace:PL.Converters"
        Title="New Service Call - Emergency Road Service" Height="600" Width="500"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#ECF0F1" Offset="0"/>
            <GradientStop Color="#F8F9FA" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <conv:CallTypeToIconConverter x:Key="CallTypeToIconConverter" />
        <conv:CallTypeToBackgroundConverter x:Key="CallTypeToBackgroundConverter" />

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="Control">
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#2C3E50" BorderThickness="2" CornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    CornerRadius="8" 
                    Margin="0,0,0,20"
                    Height="50">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#E74C3C" Offset="0"/>
                        <GradientStop Color="#C0392B" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <TextBlock Text="??" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="New Emergency Service Call" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="??" FontSize="24" Margin="10,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Status Message -->
            <Border Grid.Row="1" 
                    Background="#D5EFCC" 
                    BorderBrush="#27AE60" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="10,8"
                    Margin="0,0,0,15"
                    Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="#27AE60" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           FontSize="12"/>
            </Border>

            <!-- Call Type Section -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Issue Type" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="Type of Issue: *" Style="{StaticResource LabelStyle}"/>
                <ComboBox ItemsSource="{Binding CallTypeCollection}" 
                          SelectedItem="{Binding SelectedCallType, Mode=TwoWay}"
                          Style="{StaticResource InputStyle}"
                          FontSize="11">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Converter={StaticResource CallTypeToIconConverter}}" 
                                           FontSize="14" 
                                           Margin="0,0,8,0" 
                                           VerticalAlignment="Center"/>
                                <Border Background="{Binding Converter={StaticResource CallTypeToBackgroundConverter}}" 
                                        CornerRadius="3" 
                                        Padding="5,2">
                                    <TextBlock Text="{Binding}" 
                                               FontWeight="Medium"/>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Description Section -->
            <StackPanel Grid.Row="3" Margin="0,0,0,15">
                <TextBlock Text="Issue Details" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="Detailed description of the issue: *" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Height="80" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1"
                         Background="White"
                         Padding="8"
                         FontSize="11"/>
            </StackPanel>

            <!-- Address Section -->
            <StackPanel Grid.Row="4" Margin="0,0,0,15">
                <TextBlock Text="?? Location" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="Full Address: *" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding FullAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource InputStyle}"
                         Padding="8"
                         FontSize="11"/>
            </StackPanel>

            <!-- Vehicle Info Section -->
            <StackPanel Grid.Row="5" Margin="0,0,0,15">
                <TextBlock Text="?? Vehicle Information" Style="{StaticResource SectionHeaderStyle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Vehicle Model:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding VehicleModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Padding="8"
                                 FontSize="11"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="License Plate:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding LicensePlate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Padding="8"
                                 FontSize="11"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Customer Info Section -->
            <StackPanel Grid.Row="6" Margin="0,0,0,15">
                <TextBlock Text="?? Customer Information" Style="{StaticResource SectionHeaderStyle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Customer Name:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding CustomerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Padding="8"
                                 FontSize="11"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Phone Number:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding CustomerPhone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 Padding="8"
                                 FontSize="11"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Time Settings Section -->
            <StackPanel Grid.Row="7" Margin="0,0,0,15">
                <TextBlock Text="? Time Settings" Style="{StaticResource SectionHeaderStyle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Opening Time:" Style="{StaticResource LabelStyle}"/>
                        <DatePicker SelectedDate="{Binding OpenTime, Mode=TwoWay}" 
                                    Style="{StaticResource InputStyle}"
                                    FontSize="11"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Completion Deadline:" Style="{StaticResource LabelStyle}"/>
                        <DatePicker SelectedDate="{Binding MaxFinishTime, Mode=TwoWay}"
                                    Style="{StaticResource InputStyle}"
                                    FontSize="11"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Required Fields Note -->
            <Border Grid.Row="8" 
                    Background="#FFF3CD" 
                    BorderBrush="#FFC107" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="10,8"
                    Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="??" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text="* Required fields" 
                               FontStyle="Italic" 
                               Foreground="#856404" 
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="9" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Content="Create Call" 
                        Width="120" 
                        Height="40"
                        Margin="10" 
                        Click="AddButton_Click"
                        Background="#27AE60"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="12"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect Color="#27AE60" BlurRadius="3" ShadowDepth="2" Opacity="0.4"/>
                    </Button.Effect>
                </Button>

                <Button Content="Cancel" 
                        Width="100" 
                        Height="40"
                        Margin="10" 
                        Click="CancelButton_Click"
                        Background="#E74C3C"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="12"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect Color="#E74C3C" BlurRadius="3" ShadowDepth="2" Opacity="0.4"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>